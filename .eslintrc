{
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "plugins": ["import"],
  "settings": {
    "import/resolve": {
      "moduleDirectory": ["node_modules"]
    }
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "no-confusing-arrow": 0,
    "no-underscore-dangle": 0,
    "no-useless-computed-key": 0,
    "no-mixed-operators": 0,
    "no-continue": 0,
    "consistent-return": 0,
    "class-methods-use-this": 0,
    // Can be refactored, not critical
    "no-restricted-syntax": 0, // 47 issues
    "no-param-reassign": 0,    // 16 issues
    // Should be for tests only
    "no-console": 0,
    "func-names": 0,
    "max-len": 0
  }
}
